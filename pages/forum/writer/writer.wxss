@import "./assets/weui.wxss";
@import "./assets/iconfont.wxss";
.container {
  background: #f8f8f8;
  height: 100vh;
  border-bottom: 1px solid #ececec;
  color: #666; }
  .container .form-lable {
    padding: 14rpx 20rpx; }

  .container .form-value {
    background: #fff;
    border-top: 1px solid #ececec;
    border-bottom: 1px solid #ececec;
    padding: 20rpx; }
  .container .form-topic {
    background: #fff;
    margin: 30rpx 0;
    display: flex; }
    .container .form-topic .form-item:nth-of-type(1) {
      width: 100rpx;
      border-right: 1px solid #ececec;
      text-align: center;
      height: 100rpx;
      line-height: 100rpx; }
    .container .form-topic .form-item:nth-of-type(2) {
      flex: auto;
      padding: 30rpx 20rpx; }
  .container .form-submit {
    margin-top: 150rpx;
    padding: 0 20rpx; }
  .container .form-notice {
    text-indent: 20px;
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #999; }
  .editor_container {
    position: relative; 
    top: 0; 
    left: 0; 
    width: 100%;
  }
  .ql-container {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    font-size: 16px;
    line-height: 1.5;
    overflow: auto;
    padding: 10px 10px 20px 10px;
    border: 1px solid #ECECEC;
  }
  
  .ql-active {
    color: #22C704;
  }
  
  .iconfont {
    display: inline-block;
    width: 30px;
    height: 30px;
    cursor: pointer;
    font-size: 20px;
  }
  
  .toolbar {
    box-sizing: border-box;
    padding: 0 10px;
    height: 50px;
    width: 100%;
    position: fixed;
    left: 0;
    right: 100%;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ECECEC;
    border-left: none;
    border-right: none;
  }
    
  .fb-btn{
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    background: #b4282d;
    /* position: fixed; */
    bottom: 0;
    left: 0;
    border-radius: 0;
    color: #fff;
    font-size: 28rpx;
  } 
